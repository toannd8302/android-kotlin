<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/detailedName"
    android:text="Name"
    android:textSize="24sp"
    android:layout_marginTop="14dp"
    android:textStyle="bold"
    android:textColor="@color/lavender"
    android:layout_gravity="center"
    />
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/detailedImage"
            android:src="@drawable/maggi_300x169"
            />
        
    </androidx.cardview.widget.CardView>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duaration"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        />
    <TextView
        android:id="@+id/detailedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="16sp"

        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        />
    <TextView
        android:id="@+id/detailedIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maggiIngredients"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/lavender"
        />
    <TextView
        android:id="@+id/detailSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maggieDesc"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>